<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:background="#ffcd2626"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/title_city_manager"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:src="@drawable/title_city" />

        <ImageView
            android:id="@+id/city_seperator"
            android:layout_width="1.0dip"
            android:layout_height="40dip"
            android:layout_marginTop="2.0dip"
            android:layout_toRightOf="@id/title_city_manager"
            android:background="#a71717" />

        <TextView
            android:id="@+id/title_city_name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@id/city_seperator"
            android:gravity="center_vertical"
            android:paddingLeft="5dip"
            android:text="北京天气"
            android:textColor="#ffffffff"
            android:textSize="22.0sp" />

        <ImageView
            android:id="@+id/title_update_btn"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:src="@drawable/title_update" />

        <ImageView
            android:id="@+id/title_share"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_toLeftOf="@+id/title_update_btn"
            android:src="@drawable/title_share" />

        <ImageView
            android:id="@+id/title_location"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_toLeftOf="@id/title_share"
            android:src="@drawable/base_action_bar_action_city" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/background"
        android:layout_below="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/biz_plugin_weather_shenzhen_bg">

        <RelativeLayout
            android:id="@+id/weather_today"
            android:layout_alignParentTop="true"
            android:layout_width="fill_parent"
            android:layout_height="300.0dip">

            <RelativeLayout
                android:id="@+id/up"
                android:layout_alignParentTop="true"
                android:layout_width="fill_parent"
                android:layout_height="140.0dip">

                <RelativeLayout
                    android:id="@+id/up_left"
                    android:layout_alignParentLeft="true"
                    android:layout_width="190dip"
                    android:layout_height="fill_parent"
                    android:paddingTop="7dip"
                    android:paddingLeft="20dip">

                    <TextView
                        android:id="@+id/beijing"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="北京"
                        android:textColor="#ffffffff"
                        android:textSize="50sp"
                        android:paddingBottom="8dip"/>
                    <TextView
                        android:id="@+id/jintian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/beijing"
                        android:text="今天16:52发布"
                        android:paddingBottom="6dip"
                        android:textColor="#ffffffff"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/shidu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/jintian"
                        android:text="湿度：75%"
                        android:textColor="#ffffffff"
                        android:textSize="20sp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/up_right"
                    android:layout_alignParentRight="true"
                    android:layout_width="190dip"
                    android:layout_height="fill_parent"
                    android:paddingTop="10dip"
                    android:paddingRight="5dip">

                    <ImageView
                        android:id="@+id/face_img"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_width="wrap_content"
                        android:layout_height="80dip"
                        android:src="@drawable/biz_plugin_weather_0_50"/>
                    <TextView
                        android:id="@+id/pm"
                        android:layout_width="wrap_content"
                        android:layout_height="20dip"
                        android:text="PM2.5"
                        android:textSize="20sp"
                        android:textColor="#ffffffff"
                        android:layout_toLeftOf="@+id/face_img"/>
                    <TextView
                        android:id="@+id/pm_value"
                        android:layout_width="wrap_content"
                        android:layout_height="50dip"
                        android:text="100"
                        android:textSize="40sp"
                        android:textColor="#ffffffff"
                        android:layout_below="@+id/pm"
                        android:layout_marginLeft="26dp"/>
                    <TextView
                        android:id="@+id/wuran"
                        android:layout_width="wrap_content"
                        android:layout_height="50dip"
                        android:text="重度污染"
                        android:textSize="28sp"
                        android:textColor="#ffffffff"
                        android:layout_below="@+id/face_img"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="8dp"/>
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/down"
                android:layout_alignParentBottom="true"
                android:layout_width="fill_parent"
                android:layout_height="160.0dip">

                <RelativeLayout
                    android:id="@+id/down_left"
                    android:layout_alignParentLeft="true"
                    android:layout_width="160dip"
                    android:layout_height="fill_parent">

                    <ImageView
                        android:id="@+id/weather_img"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:src="@drawable/biz_plugin_weather_qing"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/down_right"
                    android:layout_alignParentRight="true"
                    android:layout_width="185dip"
                    android:layout_height="fill_parent">
                    <TextView
                        android:id="@+id/day"
                        android:layout_height="40dip"
                        android:layout_width="wrap_content"
                        android:text="今天 星期三"
                        android:textSize="28sp"
                        android:textColor="#ffffffff"
                        android:layout_alignParentTop="true"/>
                    <TextView
                        android:id="@+id/temperature"
                        android:layout_height="40dip"
                        android:layout_width="wrap_content"
                        android:text="℃7～℃-2"
                        android:textSize="36sp"
                        android:textColor="#ffffffff"
                        android:layout_below="@id/day"/>
                    <TextView
                        android:id="@+id/weather"
                        android:layout_height="40dip"
                        android:layout_width="wrap_content"
                        android:text="多云转晴"
                        android:textSize="28sp"
                        android:textColor="#ffffffff"
                        android:layout_below="@id/temperature"/>
                    <TextView
                        android:id="@+id/wind"
                        android:layout_height="40dip"
                        android:layout_width="wrap_content"
                        android:text="微风"
                        android:textSize="28sp"
                        android:textColor="#ffffffff"
                        android:layout_below="@id/weather"/>
                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>


    </RelativeLayout>



</RelativeLayout>
